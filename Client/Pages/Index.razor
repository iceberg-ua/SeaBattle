@page "/"

@inject IJSRuntime JsRuntime

<style>
    .rematch-modal {
        border-radius: 12px;
        backdrop-filter: blur(10px);
    }
    
    .rematch-modal .modal-body {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 12px;
    }
    
    .rematch-icon {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        border-radius: 50%;
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
    }
    
    .rematch-spinner {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        border-radius: 50%;
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
    }
    
    .rematch-modal .btn {
        border-radius: 20px;
        font-weight: 500;
        transition: transform 0.2s ease;
    }
    
    .rematch-modal .btn:hover {
        transform: translateY(-1px);
    }
    
    .rematch-modal .modal-backdrop {
        background-color: rgba(0, 0, 0, 0.6);
    }
</style>

@if (GameStateService.HasState)
{
    <div class="container centered-form">
        <div class="text-center mb-3">
            
            <HeaderComponent></HeaderComponent>
            
            @if (!IsStarted)
            {
                <div class="game-setup-layout">
                    <div class="game-board-container">
                        <GameBoard Field=GameState.OwnField 
                                   EnemyField=GameState.EnemyField
                                   CellClicked=@(IsReady ? null : FieldCellClicked)></GameBoard>
                    </div>
                    
                    @if (!IsReady)
                    {
                        <div class="game-sidebar">
                            <ShipCountIndicator></ShipCountIndicator>
                        </div>
                    }
                </div>
                
                @if (ShowSetupButtons)
                {
                    <div class="button-container">
                        <button class="btn btn-danger" disabled="@(ClearButtonDisable || _isClearLoading)" @onclick=ClearButtonClicked>
                            @if (_isClearLoading)
                            {
                                <LoadingSpinner Show="true" Size="LoadingSpinner.SpinnerSize.Small" Inline="true" />
                            }
                            else
                            {
                                <span>Clear</span>
                            }
                        </button>
                        <button class="btn btn-success" disabled="@(!FleetComplete || _showWaitingIndicator)" @onclick=OnReadyButtonClick>
                            @if (_showWaitingIndicator)
                            {
                                <LoadingSpinner Show="true" Size="LoadingSpinner.SpinnerSize.Small" Inline="true" />
                            }
                            else
                            {
                                <span>Ready</span>
                            }
                        </button>
                    </div>
                }
                
                @if (IsGameOver)
                {
                    <div class="button-container">
                        <button class="btn btn-primary" @onclick=OnRematchButtonClick>
                            <span>Rematch</span>
                        </button>
                        <button class="btn btn-secondary" @onclick=OnNewGameButtonClick>
                            <span>Start New Game</span>
                        </button>
                    </div>
                }
            }
            else
            {
                <div class="game-board-wrapper">
                    @if (_isCellClickLoading)
                    {
                        <div class="game-loading-overlay">
                            <LoadingSpinner Show="true" Size="LoadingSpinner.SpinnerSize.Medium" Text="Processing..." />
                        </div>
                    }
                    
                    <GameBoard Field=GameState.OwnField 
                               EnemyField=GameState.EnemyField
                               CellClicked=FieldCellClicked></GameBoard>
                </div>
            }
        </div>
    </div>
}

@if (_showRematchRequest)
{
    <div class="modal fade show rematch-modal" style="display: block;" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
            <div class="modal-content border-0 shadow-lg rematch-modal">
                <div class="modal-body text-center p-4">
                    <div class="rematch-icon">
                        <i class="fas fa-sync-alt text-white fa-lg"></i>
                    </div>
                    <h5 class="modal-title mb-2 fw-bold">Rematch Request</h5>
                    <p class="mb-4 text-muted">
                        <strong class="text-primary">@_rematchRequestPlayerName</strong> wants a rematch!
                    </p>
                    <div class="d-flex gap-1 justify-content-center">
                        <button type="button" class="btn btn-success btn-sm px-2 py-1 small" @onclick="AcceptRematchRequest">
                            <i class="fas fa-check me-1 small"></i> Accept
                        </button>
                        <button type="button" class="btn btn-outline-secondary btn-sm px-2 py-1 small" @onclick="RejectRematchRequest">
                            <i class="fas fa-times me-1 small"></i> Decline
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@if (_showRematchPending)
{
    <div class="modal fade show rematch-modal" style="display: block;" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
            <div class="modal-content border-0 shadow-lg rematch-modal">
                <div class="modal-body text-center p-4">
                    <div class="rematch-spinner">
                        <div class="spinner-border text-white spinner-border-sm" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                    <h5 class="modal-title mb-2 fw-bold">Request Sent</h5>
                    <p class="mb-4 text-muted small">
                        Waiting for <strong class="text-primary">@_rematchTargetPlayerName</strong> to respond...
                    </p>
                    <button type="button" class="btn btn-outline-danger btn-sm px-2 py-1 small" @onclick="CancelRematchRequest">
                        <i class="fas fa-ban me-1 small"></i> Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

