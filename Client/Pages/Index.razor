@page "/"

@inject IJSRuntime JsRuntime

@if (GameStateService.HasState)
{
    <div class="container centered-form">
        <div class="text-center mb-3">
            
            <HeaderComponent></HeaderComponent>
            
            @if (!IsStarted)
            {
                <div class="game-setup-layout">
                    <div class="game-board-container">
                        <GameBoard Field=GameState.OwnField 
                                   EnemyField=GameState.EnemyField
                                   CellClicked=@(IsReady ? null : FieldCellClicked)></GameBoard>
                    </div>
                    
                    @if (!IsReady)
                    {
                        <div class="game-sidebar">
                            <ShipCountIndicator></ShipCountIndicator>
                        </div>
                    }
                </div>
                
                @if (ShowSetupButtons)
                {
                    <div class="button-container">
                        <button class="btn btn-danger" disabled="@(ClearButtonDisable || _isClearLoading)" @onclick=ClearButtonClicked>
                            @if (_isClearLoading)
                            {
                                <LoadingSpinner Show="true" Size="LoadingSpinner.SpinnerSize.Small" Inline="true" />
                            }
                            else
                            {
                                <span>Clear</span>
                            }
                        </button>
                        <button class="btn btn-success" disabled="@(!FleetComplete || _showWaitingIndicator)" @onclick=OnReadyButtonClick>
                            @if (_showWaitingIndicator)
                            {
                                <LoadingSpinner Show="true" Size="LoadingSpinner.SpinnerSize.Small" Inline="true" />
                            }
                            else
                            {
                                <span>Ready</span>
                            }
                        </button>
                    </div>
                }
                
                @if (IsGameOver)
                {
                    <div class="button-container">
                        <button class="btn btn-primary" @onclick=OnRematchButtonClick>
                            <span>Rematch</span>
                        </button>
                        <button class="btn btn-secondary" @onclick=OnNewGameButtonClick>
                            <span>Start New Game</span>
                        </button>
                    </div>
                }
            }
            else
            {
                <div class="game-board-wrapper">
                    @if (_isCellClickLoading)
                    {
                        <div class="game-loading-overlay">
                            <LoadingSpinner Show="true" Size="LoadingSpinner.SpinnerSize.Medium" Text="Processing..." />
                        </div>
                    }
                    
                    <GameBoard Field=GameState.OwnField 
                               EnemyField=GameState.EnemyField
                               CellClicked=FieldCellClicked></GameBoard>
                </div>
            }
        </div>
    </div>
}

@if (_showRematchRequest)
{
    <div class="modal fade show" style="display: block;" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Rematch Request</h5>
                </div>
                <div class="modal-body">
                    <p><strong>@_rematchRequestPlayerName</strong> wants a rematch!</p>
                    <p>Do you want to play another round?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" @onclick="AcceptRematchRequest">
                        Accept
                    </button>
                    <button type="button" class="btn btn-secondary" @onclick="RejectRematchRequest">
                        Decline
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

