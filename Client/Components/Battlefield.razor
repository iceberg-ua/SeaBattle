@inject GameState State

<div class="container">
    <h3>Battlefield size: @State.Size</h3>

    <table>
        @for (int i = 0; i < State.Size; i++)
        {
            <tr>
                @for (int j = 0; j < State.Size; j++)
                {
                    <th>
                        <SeaCell X=i Y=j Clicked=CellClicked></SeaCell>
                    </th>
                }
            </tr>
        }
    </table>
</div>

@code {

    [Parameter]
    public EventCallback<(int, int)> OnCellClick { get; set; }

    public void CellClicked((int x, int y) cell)
    {
        OnCellClick.InvokeAsync(cell);
    }
}