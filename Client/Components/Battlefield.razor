<div class="container">
    <table>
        @for (int i = 0; i < PlayerState.FieldSize; i++)
        {
            <tr>
                @for (int j = 0; j < PlayerState.FieldSize; j++)
                {
                    <td>
                        <SeaCell X=i Y=j Clicked=CellClicked State="PlayerState.Armada[i * 10 + j]"></SeaCell>
                    </td>
                }
            </tr>
        }
    </table>
</div>

@code {

    [CascadingParameter]
    public PlayerState PlayerState { get; set; } = default!;

    public void CellClicked((int x, int y) cell)
    {
        if(!PlayerState.InProgress)
        {
            PlayerState.Armada[cell.x * 10 + cell.y] = CellState.ship;
        }
    }
}